{
  "build": {
    "command": "npm run build",
    "output_directory": ".next",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "functions": {
    "directory": "app/api"
  },
  "routes": [
    {
      "pattern": "/api/*",
      "function": "api"
    }
  ],
  "deployment": {
    "command": "npx wrangler pages deploy .next --project-name open-lovable"
  }
}


